import { NestFactory } from '@nestjs/core';
import { Controller, Get, Module } from '@nestjs/common';

// --- Simula√ß√£o da estrutura de um projeto NestJS b√°sico num √∫nico ficheiro ---

@Controller()
class AppController {
  @Get()
  getHello(): { message: string } {
    return { message: 'A API Clin-ia Med est√° no ar!' };
  }
}

@Module({
  imports: [],
  controllers: [AppController],
  providers: [],
})
class AppModule {}

// --- Fim da simula√ß√£o ---

async function bootstrap() {
  const app = await NestFactory.create(AppModule);

  // Habilita o CORS (Cross-Origin Resource Sharing).
  // Isto permite que a sua aplica√ß√£o frontend (a correr no navegador)
  // possa fazer pedidos a esta API (a correr no servidor).
  app.enableCors();

  // A porta √© lida da vari√°vel de ambiente PORT, o que √© necess√°rio para o Render.
  const port = process.env.PORT || 3000;
  await app.listen(port);
  console.log(`üöÄ A API est√° a rodar em: http://localhost:${port}`);
}
bootstrap();

